{
  "name": "threads",
  "private": true,
  "description": "Threads, the client-side interface for Ginger",
  "repository": {
    "type": "git",
    "url": "https://github.com/lincolnloop/threads.git"
  },
  "version": "0.1.0",
  "main": "./client/index.js",
  "scripts": {
    "watch-js": "watchify client/index.js -o build/threads.js --debug",
    "build-js": "browserify client/index.js -o build/threads.js",
    "build-js-dev": "browserify client/index.js -o build/threads.js --debug",
    "browser-sync": "browser-sync start --config bs.config.js",
    "start": "npm run watch-js & npm run browser-sync",
    "dist": "NODE_ENV=production gulp dist",
    "prod:deploy": "npm run dist && rsync -avz --chmod=g+w --omit-dir-times --delete ./dist/ usethreads.com:/var/www/usethreads.com",
    "deploy": "npm run dist && rsync -avz --chmod=g+w --omit-dir-times --delete ./dist/ dev.usethreads.com:/var/www/dev.usethreads.com"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "blacklist": [
            "regenerator"
          ]
        }
      ]
    ]
  },
  "devDependencies": {
    "browser-sync": "^2.9.11",
    "chai": "~1.9.1",
    "connect-history-api-fallback": "^1.1.0",
    "cookies": "^0.4.1",
    "font-awesome": "~4.0.3",
    "jshint-stylish": "~0.1.5",
    "mocha": "~1.18.2",
    "node-bourbon": "~1.0.0",
    "node-neat": "~1.1.0",
    "request": "~2.34.0",
    "sinon": "~1.9.0",
    "watchify": "^3.5.0"
  },
  "dependencies": {
    "MD5": "~1.2.0",
    "ampersand-router": "^3.0.2",
    "amygdala": "~0.3.0",
    "backbone": "^1.2.3",
    "browserify": "^11.2.0",
    "browserify-zepto": "^1.1.4",
    "classnames": "^2.2.0",
    "clientconfig": "~0.0.4",
    "crossing": "~0.1.4",
    "event-emitter": "~0.3.1",
    "fastclick": "~1.0.0",
    "jquery": "~2.1.0",
    "loglevel": "~0.6.0",
    "moment": "~2.6.0",
    "q": "~1.0.1",
    "query-string": "^1.0.0",
    "react": "^0.14.0",
    "react-addons-css-transition-group": "^0.14.0",
    "react-dom": "^0.14.0",
    "reactify": "^1.1.1",
    "underscore": "~1.6.0"
  }
}

{
  "name": "threads",
  "private": true,
  "description": "Threads, the client-side interface for Ginger",
  "repository": {
    "type": "git",
    "url": "https://github.com/lincolnloop/threads.git"
  },
  "version": "0.1.0",
  "main": "./client/index.js",
  "scripts": {
    "postinstall": "make -j5 all autoprefix=1",
    "watch-js": "make js watch=1",
    "build-js": "make js",
    "build-js-dev": "make js debug=1",
    "watch-css": "make css watch=1",
    "build-css": "make css",
    "browser-sync": "browser-sync start --config bs.config.js",
    "start": "make -j5 all watch=1 & npm run browser-sync",
    "prod:deploy": "make deploy prod=1",
    "deploy": "make deploy"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "blacklist": [
            "regenerator"
          ]
        }
      ]
    ]
  },
  "devDependencies": {
    "browser-sync": "^2.9.11",
    "chai": "~1.9.1",
    "connect-history-api-fallback": "^1.1.0",
    "cookies": "^0.4.1",
    "font-awesome": "~4.0.3",
    "jshint-stylish": "~0.1.5",
    "mocha": "~1.18.2",
    "request": "~2.34.0",
    "sinon": "~1.9.0",
    "watchify": "^3.5.0"
  },
  "dependencies": {
    "MD5": "~1.2.0",
    "alt": "^0.17.6",
    "ampersand-router": "^3.0.2",
    "amygdala": "~0.5.0",
    "autoprefixer": "^6.0.3",
    "babelify": "^6.4.0",
    "backbone": "^1.2.3",
    "browserify": "^11.2.0",
    "browserify-zepto": "^1.1.4",
    "classnames": "^2.2.0",
    "clientconfig": "~0.0.4",
    "crossing": "~0.1.4",
    "event-emitter": "~0.3.1",
    "fastclick": "~1.0.0",
    "jquery": "~2.1.0",
    "loglevel": "~0.6.0",
    "moment": "~2.6.0",
    "node-sass": "^3.4.0",
    "postcss-cli": "^2.3.1",
    "q": "~1.0.1",
    "query-string": "^1.0.0",
    "react": "^0.14.0",
    "react-addons-css-transition-group": "^0.14.0",
    "react-dom": "^0.14.0",
    "reactify": "^1.1.1",
    "uglifyjs": "^2.4.10",
    "underscore": "~1.6.0"
  }
}
